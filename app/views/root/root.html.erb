<div id="splash-container">
  <img src="/sliderbg-2.jpg" id="splash">

  <div class="group" id="root-page-search-bar-container">
    <h1>Find a venue</h1>
    <h3>Rent from over thousands<br> of users worldwide</h3>
  <form action="<%= spaces_url %>" class="group" id="root-page-search-bar">
<form action="#" class="group" id="root-page-search-bar">
      <%= tag "input", type: "text",
                placeholder: "What city are you booking in?",
                       name: "space_filters[city]",
                      class: "text-input input-large",
                         id: "root-input-city-name" %>

      <%= select_numerical_given_options(html_name: "space_filters[guest_count]",
                                       plural_noun: "guests") %>

      <input type="submit" value="Search" class="button blue input-large" id="search-button">

    </form>
  </div>
</div>