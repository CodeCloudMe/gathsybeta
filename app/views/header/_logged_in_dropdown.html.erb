<li id="user-nav">
  <ul>
    <li>
       <% if !current_user.avatar? %>

 
     <%= link_to image_tag(current_user.photo_medium, class: "image-micro-thumb", id: "header-user-image"), current_user, method: :get %>
    <%end %>

     <% if current_user.avatar? %>

     <%= link_to image_tag(current_user.avatar_url(), class: "image-micro-thumb", id: "header-user-image"), current_user, method: :get %>
    <%end %>
     
    </li>
    <li>
      <%= link_to current_user.first_name, current_user, id: "username", method: :get %>
    </li>
  </ul>
  <ul id="user-dropdown">
    <li><%= link_to "Profile", current_user, method: :get %></li>
    <li><%= link_to "Trips", bookings_url, method: :get %></li>
    <li><%= link_to "Log out", session_url, method: :delete  %></li>
  </ul>
</li>