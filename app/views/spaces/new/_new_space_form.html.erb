<!-- This is being edited without also changing the data info for the sake of time. In other words this is a bunch of programming debt being accumulated. -->
<div class="section group">
        <div class="col span_3_of_3">
          <h1 class="">List Your Space</h1>
          <p class="">
            Make money renting out your space.
          </p>
        </div>
      </div>

<form class="group" action="<%= spaces_url %>" method="post" enctype='multipart/form-data'>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="space-title">Space Title</label>
  <div class="input-wrapper">
     <%= tag "input", type: "text",
               placeholder: "Awesome Flat Near Everything!",
                      name: "space[title]",
                     class: "input-long input-small",
                        id: "space-title" %></div><br>

  <label for="space-street-address">Street Address</label>
  <div class="input-wrapper">
    <%= tag "input", type: "text",
              placeholder: "1234 Streetplace Rd.",
                     name: "space[address]",
                    class: "input-long input-small",
                       id: "space-street-address" %></div><br>

  <label for="space-city">City</label>
  <div class="input-wrapper">

    <%= tag "input", type: "text",
              placeholder: "New York City, NY",
                     name: "space[city]",
                    class: "input-long input-small",
                       id: "space-city" %></div><br>

  <label for="space-country">Country</label>
  <div class="input-wrapper">
    <%= tag "input", type: "text",
              placeholder: "United States of America",
                     name: "space[country]",
                    class: "input-long input-small",
                       id: "space-country" %></div><br>

  <label for="space-description" class="top">Description</label>
  <div class="input-wrapper">
    <%= tag "textarea", name: "space[description]",
                 placeholder: "Super awesome description.",
                       class: "input-long input-small",
                          id: "space-description" %></textarea></div><br>

  <label for="space-house-rules" class="top">Rules</label>
  <div class="input-wrapper">
    <%= tag "textarea", name: "space[house_rules]",
                 placeholder: "No Pets Allowed",
                       class: "input-long input-small",
                        value:"No Pets Allowed",
                          id: "space-house-rules" %></textarea></div><br>

  <label for="space-booking_rates">Hourly Rental Rate</label>
  <div class="input-wrapper">
    <%= tag "input", type: "number",
    name: "space[booking_rate_daily]",
              placeholder: "50",
                    class: "number-input input-long input-small",
                        id: "space-booking-rate-daily" %></div><br>

  <label for="space-residence-type">Space Type</label>
    <select type="text" name="space[residence_type]" id="space-residence-type">
      <% Space.residence_types.each_with_index do |residence_type, index| %>
        <option value="<%= index %>"><%= residence_type %></option>
      <% end %>
    </select><br>

  <label for="space-room-type">Square Footage</label>
    <select type="text" name="space[room_type]" id="space-room-type">
      <% Space.room_types.each_with_index do |room_type, index| %>
        <option value="<%= index %>"><%= room_type %></option>
      <% end %>
    </select><br>

     <label for="space-bedroom-count" style="display:none">Bedroom Count</label>
    <select type="text" name="space[bedroom_count]" id="space-bedroom-count" style="display:none">
        <option value="0">1</option>
        <option value="1">2</option>
        <option value="2">3</option>
        <option value="3">4</option>
        <option value="4">5</option>
        <option value="5">6</option>
        <option value="6">7</option>
        <option value="7">8</option>
        <option value="8">9</option>
        <option value="9">10</option>
        <option value="10">15</option>
        <option value="11">20</option>
        <option value="12">30</option>
        <option value="13">50</option>
        <option value="14">100</option>
        <option value="15">200+</option>
    </select><br>

  <label for="space-bathroom-count" style="display:none">Bathroom Count</label>
    <select type="text" name="space[bathroom_count]" id="space-bedroom-count" style="display:none">
        <option value="0">1</option>
        <option value="1">2</option>
        <option value="2">3</option>
        <option value="3">4</option>
        <option value="4">5</option>
        <option value="5">6</option>
        <option value="6">7</option>
        <option value="7">8</option>
        <option value="8">9</option>
        <option value="9">10</option>
        <option value="10">15</option>
        <option value="11">20</option>
        <option value="12">30</option>
        <option value="13">50</option>
        <option value="14">100</option>
        <option value="15">200+</option>
    </select>
    <label for="space-bed-type" style="display:none">Bed Type</label>
    <select type="text" name="space[bed_type]" id="space-bed-type" style="display:none">
        <option value="0">Real Bed</option>
    </select>




  <!-- <label for="space-bed-type">Bed Type</label>
    <select type="text" name="space[bed_type]" id="space-bed-type">
      <% Space.bed_types.each_with_index do |bed_type, index| %>
        <option value="<%= index %>"><%= bed_type %></option>
      <% end %>
    </select><br> -->

  <label for="space-accomodates">Accommodates</label>
    <select type="text" name="space[accommodates]" id="space-accomodates">
      <% Space.numerical_options.each_with_index do |accomodates, index| %>
        <option value="<%= accomodates%>"><%= accomodates %></option>
      <% end %>
    </select><br>

  <label for="space-amenities" class="top">Amenities</label>
    <ul class="group" id="space-amenities">
      <% Space.amenities_list.each_with_index do |amenity, index| %>
        <li class="checkbox-li">
          <input type="checkbox" name="space_amenities_indicies[]" value="<%= index %>">
            <%= amenity %>
          </input>
        </li>
      <% end %>
    </ul><br>


    <label for="placeavatar1">Main Photo</label>
<input type="file" name="space[placeavatar1]" id="file" class="input-long"><br>


  <input type="submit" class="button blue input-large label-offset-button" value="Create space">
</form>